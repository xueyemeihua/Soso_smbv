<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <filter>
        <filter-name>VolidLoginFilter</filter-name>
        <filter-class>com.sky.soso.controller.VolidLoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>VolidLoginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.sky.soso.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.sky.soso.controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserViewServlet</servlet-name>
        <servlet-class>com.sky.soso.controller.UserViewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowMyBusinessServlet</servlet-name>
        <servlet-class>com.sky.soso.controller.ShowMyBusinessServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuyBusinessServlet</servlet-name>
        <servlet-class>com.sky.soso.controller.BuyBusinessServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoBuyBusServlet</servlet-name>
        <servlet-class>com.sky.soso.controller.DoBuyBusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DoBuyBusServlet</servlet-name>
        <url-pattern>/doBuyBus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuyBusinessServlet</servlet-name>
        <url-pattern>/buyBusiness</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowMyBusinessServlet</servlet-name>
        <url-pattern>/showMyBusiness</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserViewServlet</servlet-name>
        <url-pattern>/userView</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

</web-app>